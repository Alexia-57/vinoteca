<div class="container">
  <div class="row justify-content-center">
    <div class="home-grid mt-3 mb-5 d-flex flex-wrap">
      <div class="card-wine">
        <div class="card-wine-body">
          <h2><%= @wine.name.capitalize %></h2>
          <br>
          <p><b>Type de vin :</b> <%= @wine.wine_type.capitalize %></p>
          <p>Pays : <%= @wine.country.capitalize %></p>
          <p>Région : <%= @wine.region.capitalize %></p>
          <p>Domaine : <%= @wine.winery.capitalize %></p>
          <p>Cépage : <%= @wine.variety.capitalize %></p>
          <p>Année : <%= @wine.year %></p>
          <p>Quantité : <%= @wine.quantity %></p>
          <p>Note : <%= @wine.rating %></p>
          <p>Commentaire : <%= @wine.comment.capitalize %></p>
          <p>Dégusté ? <%= @wine.empty ? 'Oui' : 'Non' %></p>
        </div>
        <div class="text-center">
          <%= link_to 'Modifier', edit_wine_path(@wine), class: 'btn submit-button' %>
        </div>
      </div>
    </div>
  </div>
</div>
