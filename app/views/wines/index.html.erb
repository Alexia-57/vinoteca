<div class="container">
  <div class="description mt-5">
    <h2>Mes vins</h2>
  </div>
  <div class="home-grid mt-5 d-flex flex-wrap">
    <% if @wines.any? %>
      <% @wines.each do |wine| %>
        <a href="<%= wine_path(wine.id) %>" class="card-reco">
          <div class="card-reco-body">
            <div class="card-text">
              <p class="responsive-truncate"><%= wine.name %></p>
              <p class="date"><%= wine.created_at.strftime('%Y-%m-%d') %></p>
            </div>
          </div>
        </a>
      <% end %>
    <% else %>
      <p>Vous n'avez pas encore ajout√© de vin</p>
    <% end %>
  </div>
</div>
